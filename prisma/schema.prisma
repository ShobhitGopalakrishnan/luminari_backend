generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Document {
  id              String       @id @default(uuid())
  type            DocumentType
  title           String
  disease         String?
  country         String?
  region          String?
  protocolId      String?
  documentType    String?
  content         String
  cmcSection      String?
  clinicalSection String?
  sections        Json?
  userId          String?
  tags            String[]
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
}

enum DocumentType {
  PROTOCOL
  STUDY_DESIGN
  REGULATORY
  OTHER
}
