generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Document {
  id              String      @id @default(uuid())
  type            DocumentType
  title           String
  disease         String?     // e.g., "Psoriasis"
  country         String?     // e.g., "United States"
  region          String?     // e.g., "North America"
  protocolId      String?     // For protocols, to store protocol_id if available
  documentType    String?     // e.g., "IND", "NDA", "Protocol", "Study Design", "BLA", etc.
  content         String      // The main text (full document, or summary if split)
  cmcSection      String?     // For docs with a CMC section
  clinicalSection String?     // For docs with a Clinical section
  sections        Json?       // For all other structured sections (e.g., { "quality": "...", "riskManagement": "...", ... })
  userId          String?     // (Optional) For multi-user support
  tags            String[]    // (Optional) For search/filtering
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
}

enum DocumentType {
  PROTOCOL
  STUDY_DESIGN
  REGULATORY
  OTHER
}
